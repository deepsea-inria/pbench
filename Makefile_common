
##################################################################
# Libraries

PBENCH_SRC_BASE=\
   pbench.ml \
   env.ml \
   params.ml \
   runs.ml \
   results.ml \
   legend.ml \
   axis.ml \
   latex.ml \
   rtool.ml \
   chart.ml \
   bar_plot.ml \
   scatter_plot.ml \
   mk_bar_plot.ml \
   mk_runs.ml \
   mk_scatter_plot.ml \
   mk_table.ml 

XLIB_SRC_BASE=\
   XBase.ml \
   XFloat.ml \
   XInt.ml \
   XList.ml \
   XMath.ml \
   XOption.ml \
   XString.ml \
   XOpt.ml \
   XFile.ml \
   XSys.ml \
   XCmd.ml 

XLIB_PATH=$(PBENCH_PATH)/xlib/
PBENCH_LIB_PATH=$(PBENCH_PATH)/lib/

XLIB_INCLUDES=-I $(XLIB_PATH) 
PBENCH_INCLUDES=$(XLIB_INCLUDES) -I $(PBENCH_LIB_PATH)

XLIB_SRC=$(addprefix $(XLIB_PATH),$(XLIB_SRC_BASE)) 
XLIB_LIBS=unix.cmxa str.cmxa
PBENCH_SRC=$(XLIB_SRC) $(addprefix $(PBENCH_LIB_PATH)/,$(PBENCH_SRC_BASE))
PBENCH_LIBS=$(XLIB_LIBS)


##################################################################
# Auxiliary programs

TIMEOUT_SCR=$(PBENCH_PATH)/timeout.c
TIMEOUT=timeout.out

$(TIMEOUT): $(TIMEOUT_SCR)
	gcc -o $@ $<


##################################################################
# Pbench binaries

OCAMLCOMP=ocamlc
XLIB_LIBS=unix.cma str.cma

%.pbench: %.ml $(PBENCH_SRC) $(TIMEOUT) 
	$(OCAMLCOMP) -w d $(PBENCH_INCLUDES) $(PBENCH_LIBS) $(PBENCH_SRC) $< -o $@

# "-w d" is for disabling warnings for deprecated features


##################################################################
# Documentation

%.pdf : %.md
	pandoc $< -s -o $@

%.html : %.md
	pandoc --mathjax $< -s -o $@


##################################################################
# Clean

pbench_clean:
	rm -f $(TIMEOUT)
	rm -f *.cmi *.cmo *.cma *.o *.cmx *.pbench




##################################################################
# Debugging

pbench_debug:
	@echo $(XLIB_INCLUDES)
	@echo $(PBENCH_INCLUDES) 
	@echo $(XLIB_SRC) 
	@echo $(PBENCH_SRC)  

